{
  "manifest_version": 3,
  "name": "Scroll Youtube Comments",
  "version": "0.1",
  "icons": {
    "16": "icons/syc-default.png",
    "32": "icons/syc-default.png",
    "48": "icons/syc-default.png",
    "128": "icons/syc-default.png"
  },
  "background": {
    "service_worker": "syc-background.js"
  },
  "action": {
    "default_popup": "syc-popup.html"
  },
  "content_scripts": [{
    "matches": ["https://youtube.com/*",  "https://www.youtube.com/*"],
    "js": ["syc-content.js"],
    "run_at": "document_start"
  }]
}